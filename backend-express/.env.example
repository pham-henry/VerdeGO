# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
# For local development with Docker: postgresql://verdego:verdego@localhost:5432/verdego?schema=public
# For Docker Compose: postgresql://verdego:verdego@postgres:5432/verdego?schema=public
DATABASE_URL=postgresql://verdego:verdego@localhost:5432/verdego?schema=public

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production (at least 32 characters)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=change-me-dev-secret-at-least-256-bits
JWT_ACCESS_EXP_MIN=30
JWT_REFRESH_EXP_DAYS=7

# CORS Configuration
# Frontend URL for CORS - adjust if your frontend runs on a different port
CORS_ORIGIN=http://localhost:5173

# Google Maps API (Optional)
# Required for transit recommender to get real route distances
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=
